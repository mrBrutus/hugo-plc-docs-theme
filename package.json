{
  "name": "hugo-plc-docs-theme",
  "version": "0.1.0",
  "description": "A Hugo theme for creating a PLC documentation website using a docs-as-code approach.",
  "main": "README.md",
  "scripts": {
    "server-dev": "hugo server -D -p 1313 -e development -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --disableFastRender --gc --buildDrafts",
    "server-dev-debug": "set HUGO_PARAMS_DEBUG=TRUE && hugo server -D -p 1315 -e development -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --disableFastRender --gc --buildDrafts --templateMetrics --templateMetricsHints",
    "server-prod": "hugo server -p 1314 -e production -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --disableFastRender --gc",
    "server-hugo-example-site": "hugo server -p 1313 -e development -t hugo-plc-docs-theme -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --disableFastRender --gc",
    "server-hugo-example-debug": "set HUGO_PARAMS_DEBUG=TRUE && hugo server -p 1313 -e development -t hugo-plc-docs-theme -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --disableFastRender --gc",
    "server-hugo-example-site-prod": "hugo server -p 1314 -e production -t hugo-plc-docs-theme -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --disableFastRender --gc",
    "build": "hugo -e production -s exampleSite --themesDir=../.. --minify --cleanDestinationDir --gc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrBrutus/hugo-plc-docs-theme.git"
  },
  "keywords": [
    "plc",
    "programmable logic controller",
    "docs",
    "documentation",
    "docs-as-code",
    "responsive",
    "tailwindcss",
    "structured text",
    "ST",
    "IEC61131"
  ],
  "author": "Bertus de Groot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrBrutus/hugo-plc-docs-theme/issues"
  },
  "homepage": "https://github.com/mrBrutus/hugo-plc-docs-theme#readme",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "tailwindcss": "^2.0.4"
  }
}
